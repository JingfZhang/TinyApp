<header>
  <h1>
    TinyApp
  </h1>
  <a href="http://localhost:8080/urls/new">Create New TinyURL</a>
</header>
<% if(!username) { %>
  <form method="POST" action="/login">
    <input type="text" name="username" style="width: 300px; margin: 1em">
    <button type="submit">Login</button>
  </form>
<% } else { %>
  Logged in as: <%= username %>
  <form method="POST" action="/logout">
    <button type="submit">Logout</button>
  </form>
<% } %>
